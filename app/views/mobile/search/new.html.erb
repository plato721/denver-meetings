<div data-role="header" data-theme="b">
  <h1>Find a Meeting</h1>
</div>


<div data-role="content" data-theme="b">
<%= form_tag(controller: "mobile/search", action: "create", method: "post", "data-ajax" => "false") do %>
  <%= button_to "Right Here Right Now", mobile_search_index_path, {:method => :post, :class => "meeting-search-hot-button", "data-role" => "button", "data-icon" => "arrow-r", "data-iconpos" => "right", "data-ajax" => "false", "rel" => "external"} %>
<% end %>

<%= form_tag(controller: "mobile/search", action: "create", method: "post", "data-ajax" => "false") do %>
  <div class="collapsible-set">
    <div data-role="collapsible">
      <h3>Location</h3>
        <%= select_tag(:city, options_for_select(@options.cities_select), {class: "menu-element"}) %>
        <fieldset data-role="controlgroup">
          <%= label_tag(:here, "Right Here") %>
          <%= check_box_tag(:here, "here") %>
       </fieldset>
        <%= text_field_tag :city_text, "(Optional search text)", { class: "city-text city-text-default" }  %>
    </div>
  </div>

  <div class="collapsible-set">
    <div data-role="collapsible">
      <h3>Day/Time</h3>
        <%= select_tag(:day, options_for_select(@options.days_select), {class: "menu-element"}) %>
        <%= select_tag(:time, options_for_select(@options.times_select), {class: "menu-element"}) %>
    </div>
  </div>

  <div class="collapsible-set">
    <div data-role="collapsible">
      <h3>Group Name</h3>
        <%= select_tag(:name, options_for_select(@options.names_select), {class: "menu-element"}) %>
        <%= text_field_tag :group_text, "(Optional search text)", { class: "group-text group-text-default" }  %>
    </div>
  </div>

  <div class="collapsible-set">
    <div data-role="collapsible">
      <h3>Open or Closed</h3>
        <fieldset data-role="controlgroup">
          <legend>Open or Closed:</legend>
          <%= radio_button_tag(:open, "open") %>
          <%= label_tag(:open_open, "Open (Non-alcoholics Okay)") %>
          <%= radio_button_tag(:open, "both", :true) %>
          <%= label_tag(:open_both, "Any") %>
          <%= radio_button_tag(:open, "closed") %>
          <%= label_tag(:open_closed, "Closed (Alcoholics Only)") %>
       </fieldset>
    </div>
  </div>

  <div class="collapsible-set">
    <div data-role="collapsible">
      <h3>Special Focus</h3>
        <fieldset data-role="controlgroup">
          <%= label_tag(:women, "Women") %>
          <%= check_box_tag(:women, "women", true) %>

          <%= label_tag(:men, "Men") %>
          <%= check_box_tag(:men, "men", true) %>

          <%= label_tag(:gay, "Gay") %>
          <%= check_box_tag(:gay, "gay", true) %>

          <%= label_tag(:spanish, "Spanish") %>
          <%= check_box_tag(:spanish, "spanish", true) %>

          <%= label_tag(:french, "French") %>
          <%= check_box_tag(:french, "french", true) %>

          <%= label_tag(:polish, "Polish") %>
          <%= check_box_tag(:polish, "polish", true) %>

          <%= label_tag(:youth, "Young Peoples") %>
          <%= check_box_tag(:youth, "youth", true) %>
       </fieldset>
    </div>
  </div>

  <%= button_to "Search", mobile_search_index_path, {:method => :post, :class => "meeting-search-button", "data-role" => "button", "data-icon" => "arrow-r", "data-iconpos" => "right", "data-ajax" => "false", "rel" => "external"} %>

<% end %>
</div>
