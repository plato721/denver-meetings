<div data-role="header" data-theme="b" data-position="fixed" data-tap-toggle="false">
  <h1>Find a Meeting</h1>
</div>

<div data-role="content" data-theme="b" role="main">
  <button class="meeting-search-hot-button" data-role="button", data-icon="arrow-r", data-iconpos="right" id="one-time">Right Here Right Now</button>

<%= form_tag(controller: "mobile/search", action: "create", method: "post", "data-ajax" => "false") do %>
  <div class="collapsible-set">
    <div data-role="collapsible">
      <h3>Location</h3>
        <%= select_tag(:city, options_for_select(@options.cities_select), {class: "menu-element"}) %>
        <fieldset data-role="controlgroup">
          <%= label_tag(:here, "Right Here", class: "here-box") %>
          <%= check_box_tag(:here, "true") %>
       </fieldset>
        <%= hidden_field_tag(:lat, nil, {class: "main-lat"}) %>
        <%= hidden_field_tag(:lng, nil, {class: "main-lng"}) %>
        <%= text_field_tag :city_text, "(Optional search text)", { class: "city-text city-text-default" }  %>
    </div>
  </div>

  <div class="collapsible-set">
    <div data-role="collapsible">
      <h3>Day/Time</h3>
        <%= select_tag(:day, options_for_select(@options.days_select), {class: "menu-element"}) %>
        <%= select_tag(:time, options_for_select(@options.times_select), {class: "menu-element"}) %>
    </div>
  </div>

  <div class="collapsible-set">
    <div data-role="collapsible">
      <h3>Group Name</h3>
        <%= select_tag(:group_name, options_for_select(@options.names_select), {class: "menu-element"}) %>
        <%= text_field_tag :group_text, "(Optional search text)", { class: "group-text group-text-default" }  %>
    </div>
  </div>

  <div class="collapsible-set">
    <div data-role="collapsible">
      <h3>Open or Closed</h3>
        <fieldset data-role="controlgroup">
          <legend>Open or Closed:</legend>
          <%= radio_button_tag(:open, "open") %>
          <%= label_tag(:open_open, "Open (Non-alcoholics Okay)") %>
          <%= radio_button_tag(:open, "any", :true) %>
          <%= label_tag(:open_any, "Any") %>
          <%= radio_button_tag(:open, "closed") %>
          <%= label_tag(:open_closed, "Closed (Alcoholics Only)") %>
       </fieldset>
    </div>
  </div>
  <%= render partial: "special_focus" %>
  <div class="collapsible-set">
    <div data-role="collapsible">
      <h3>Access/Services</h3>
            <fieldset data-role="controlgroup" data-type="horizontal" data-mini="true">
        <legend>Accessible:</legend>
          <%= radio_button_tag(:access, "hide") %>
          <%= label_tag(:access_hide, "Hide") %>
          <%= radio_button_tag(:access, "show", :true) %>
          <%= label_tag(:access_show, "Show") %>
          <%= radio_button_tag(:access, "only") %>
          <%= label_tag(:access_only, "Show Only") %>
      </fieldset>

      <fieldset data-role="controlgroup" data-type="horizontal" data-mini="true">
        <legend>Non-Smoking:</legend>
          <%= radio_button_tag(:non_smoking, "hide") %>
          <%= label_tag(:non_smoking_hide, "Hide") %>
          <%= radio_button_tag(:non_smoking, "show", :true) %>
          <%= label_tag(:non_smoking_show, "Show") %>
          <%= radio_button_tag(:non_smoking, "only") %>
          <%= label_tag(:non_smoking_only, "Show Only") %>
      </fieldset>

      <fieldset data-role="controlgroup" data-type="horizontal" data-mini="true">
        <legend>Sitter:</legend>
          <%= radio_button_tag(:sitter, "hide") %>
          <%= label_tag(:sitter_hide, "Hide") %>
          <%= radio_button_tag(:sitter, "show", :true) %>
          <%= label_tag(:sitter_show, "Show") %>
          <%= radio_button_tag(:sitter, "only") %>
          <%= label_tag(:sitter_only, "Show Only") %>
      </fieldset>
    </div>
  </div>

  <div class="collapsible-set">
    <div data-role="collapsible">
      <h3>Language</h3>
        <fieldset data-role="controlgroup" data-type="horizontal" data-mini="true">
          <legend>Spanish:</legend>
            <%= radio_button_tag(:spanish, "hide") %>
            <%= label_tag(:spanish_hide, "Hide") %>
            <%= radio_button_tag(:spanish, "show", :true) %>
            <%= label_tag(:spanish_show, "Show") %>
            <%= radio_button_tag(:spanish, "only") %>
            <%= label_tag(:spanish_only, "Show Only") %>
        </fieldset>

        <fieldset data-role="controlgroup" data-type="horizontal" data-mini="true">
          <legend>Polish:</legend>
            <%= radio_button_tag(:polish, "hide") %>
            <%= label_tag(:polish_hide, "Hide") %>
            <%= radio_button_tag(:polish, "show", :true) %>
            <%= label_tag(:polish_show, "Show") %>
            <%= radio_button_tag(:polish, "only") %>
            <%= label_tag(:polish_only, "Show Only") %>
          </fieldset>

          <fieldset data-role="controlgroup" data-type="horizontal" data-mini="true">
            <legend>French:</legend>
              <%= radio_button_tag(:french, "hide") %>
              <%= label_tag(:french_hide, "Hide") %>
              <%= radio_button_tag(:french, "show", :true) %>
              <%= label_tag(:french_show, "Show") %>
              <%= radio_button_tag(:french, "only") %>
              <%= label_tag(:french_only, "Show Only") %>
          </fieldset>
      </div>
    </div>

  <%= button_to "Search", mobile_search_index_path, {:method => :post, :class => "meeting-search-button", "data-role" => "button", "data-icon" => "arrow-r", "data-iconpos" => "right", "data-ajax" => "false", "rel" => "external"} %>

<% end %>
</div>
