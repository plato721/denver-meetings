%h2.edit-header
  Edit Meeting
= bootstrap_form_for @meeting, layout: :horizontal, :url => admin_meeting_path, :html => {:method => :patch} do |f|
  = f.text_field :group_name
  = f.text_field :day
  = f.text_field :time
  = f.text_field :address_1
  = f.text_field :address_2
  = f.text_field :notes
  = f.text_field :city
  = f.text_field :zip
  = f.text_field :lat, label: "Latitude"
  = f.text_field :lng, label: "Longitude"
  = f.check_box :approved, label: "Make this meeting displayable"
  = f.submit "Update Meeting", class: "btn btn-default btn-lg update-meeting-button"
