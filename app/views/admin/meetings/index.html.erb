<div class="mainline">
  <div class="container-fluid">
    <div class="row">
      <h1 class="page-header">
        Meetings
      </h1>
    </div>

    <div class="row">
      <div class="col-lg-4">
        <div class="table-responsive">
          <table class="table table-bordered table-hover">
            <thead>
              <tr>
                <th>Approved</th>
                <th>Day</th>
                <th>Time</th>
                <th>Group Name</th>
                <th>Address</th>
                <th>Notes</th>
                <th>Phone</th>
                <th>Lat/Long</th>
              </tr>
            </thead>
            <tbody>
              <% @meetings.each do |meeting| %>
              <tr>
                <td id="approval-display-<%= meeting.id %>">
                  <%= link_to meeting.approved, edit_admin_meeting_path(meeting.meeting) %>
                </td>
                <td><%= meeting.day %></td>
                <td><%= meeting.time %></td>
                <td><%= meeting.group_name %></td>
                <td><%= raw(meeting.address) %></td>
                <td><%= meeting.notes %></td>
                <td><%= meeting.phone %></td>
                <td><%= meeting.coords %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>